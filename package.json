{
  "name": "wallet",
  "version": "1.0.0",
  "description": "> **This project is being built by the interns at Coil and is NOT ready to use. We'll make a release as soon as it is.**",
  "main": "./build/app.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -Rf .nyc_output && rm -Rf coverage && rm -Rf build ",
    "codecov": "codecov",
    "doc": "typedoc --options typedoc.js src/index.ts",
    "watch-node": "nodemon app.js --ignore ./test/",
    "lint": "tslint --project .",
    "loadtest": "concurrently 'npm run watch-node' 'sleep 5 && artillery run -o artillery/report.json artillery/walletLoadTest.yml && artillery report artillery/report.json'",
    "prepublishOnly": "npm run lint && npm test && npm run doc",
    "pretest": "node initTestDB.js && node initEmptyDB.js && tsc --build",
    "preversion": "npm run lint && npm test",
    "test": "nyc --reporter=html --reporter=text --reporter=lcovonly mocha -S --require ts-node/register --ui mocha-typescript --require source-map-support/register 'test/**/*.spec.ts'",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w"
  },
